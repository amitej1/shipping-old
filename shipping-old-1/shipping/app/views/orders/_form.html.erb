 

<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :length %><br />
    <%= f.text_field :length %>
  </div>
  <div class="field">
    <%= f.label :width %><br />
    <%= f.text_field :width %>
  </div>
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :weight %>In Pounds<br />
    <%= f.text_field :weight %>
  </div>
  
    <%= f.label :SendersAddress %><br />
    <%= f.fields_for :origin do |o| %>
    <div class="field">
    <%= o.label :sender_city %><br />
    <%= o.text_field :city %>
  </div>
  <div class="field">
    <%= o.label :sender_state %><br />
    <%= o.text_field :state %>
  </div>
  <div class="field">
    <%= o.label :sender_zipcode %><br />
    <%= o.text_field :zipcode %>
  </div>
  <div class="field">
    <%= o.label :sender_country %><br />
    <%= o.text_field :country %>
  </div>
  <% end %>
 
    <%= f.label :DestinationAddress %><br />
    <%= f.fields_for :destination do |d| %>
     <div class="field">
    <%= d.label :destination_city %><br />
    <%= d.text_field :city %>
  </div>
  <div class="field">
    <%= d.label :destination_state %><br />
    <%= d.text_field :state %>
  </div>
  <div class="field">
    <%= d.label :destination_zipcode %><br />
    <%= d.text_field :zipcode %>
  </div>
  <div class="field">
    <%= d.label :destination_country %><br />
    <%= d.text_field :country %>
  </div>
  <% end %>

  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
