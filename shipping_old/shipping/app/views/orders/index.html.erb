<h1>Listing orders</h1>

<table>
  <tr>
    
    <th>Length</th>
    <th>Width</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Origin</th>
    <th>Destination</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    
    <td><%= order.length %></td>
    <td><%= order.width %></td>
    <td><%= order.height %></td>
    <td><%= order.weight %></td>
    <td><%= Address.find(order.origin_id) %></td>
    <td><%= Address.find(order.destination_id) %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

